<body>
    <h1>Thank you for your order, <%= @order.email %></h1>
    <p>
      You have successfully order from jungle.com:
      <br>
    </p>
<div class="order-summary jumbotron">
<h4>Thank you for your order, <%= @order.email %>!</h4>
<br>

<div class="panel panel-default items">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |item| %>
      <% product = Product.find_by id: item.product_id %>
      <%= render 'item', product: product[:name], quantity: item[:quantity].to_i, unit_price: item[:item_price_cents]  %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        TOTAL:
      </th>
      <th>
        <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
      </th>
    </tr>
  </tfoot>
</table>
</div>
    <p>Thanks for shopping and have a great day!</p>
